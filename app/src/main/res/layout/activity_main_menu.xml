<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/txtTituloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TACOS MIKE"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/txtNicknameMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_usuario"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNuevaOrden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVA ORDEN"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/buttonPallette"
        app:cornerRadius="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegistrarVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRAR VENTA"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/buttonPallette"
        app:cornerRadius="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditarOrden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDITAR ORDEN"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/buttonPallette"
        app:cornerRadius="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdministrarMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADMINISTRAR MENU"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/buttonPallette"
        app:cornerRadius="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReporteVentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REPORTE VENTAS"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/buttonPallette"
        app:cornerRadius="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>